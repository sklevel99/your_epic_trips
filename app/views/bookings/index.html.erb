<div class="container page">
  <h1 class="header">Your bookings</h1>

  <ul class="list">
    <% @bookings.each do |booking| %>
      <li><%= booking.start_date%></li>
      <li><%= booking.end_date%></li>
      <%= link_to 'Delete a booking', booking_path(booking), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-primary btn-delete" %>
    <% end %>
  </ul>

  <%= link_to 'Go back to the lists', trips_path,class: "btn btn-secondary btn-delete btn-go" %>
</div>
