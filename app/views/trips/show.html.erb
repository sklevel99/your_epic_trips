

<div class="container">
  <div class="flat-container margin-nav">
    <div class="flat-container-left">
      <div class="show-title flat">
        <h3><%= @trip.title %></h3>
        <%= link_to trips_path do %>
          <button class="btn btn-principal btn-margin-top">All trips</button>
       <% end %>
      </div>

 <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag "3.jpg" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "1.jpg" %>
    </div>
    <div class="carousel-item">
      <%= image_tag "2.jpg" %>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

      <div class="flat-description">
        <div class="flat-info">
          <p><i class="fas fa-ruler-combined"></i> <%= @trip.category %> </p>
          <p><i class="fas fa-rupee-sign"></i><span id="flat-price-per-night"><%= @trip.price %></span> Rs / pers</p>
          <p><i class="fas fa-users"></i> <%= @trip.total_participant %></p>
        </div>
        <p><%= @trip.details%></p>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="flat-container margin-nav">
    <%= link_to new_trip_booking_path(@trip) do %>
      <button class="btn btn-principal btn-margin-top">Book</button>
    <% end %>
  </div>
</div>


