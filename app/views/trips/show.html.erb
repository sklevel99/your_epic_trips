<div class="container">
  <div class="flat-container">
    <div class="flat-container-left">
      <div class="show-title flat">
        <h3><%= @trip.title %></h3>
        <%= link_to trips_path do %>
          <button class="btn btn-principal btn-margin-top">All trips</button>
       <% end %>
      </div>

      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= image_tag "3.jpg" %>
          </div>
          <div class="carousel-item">
            <%= image_tag "1.jpg" %>
          </div>
          <div class="carousel-item">
            <%= image_tag "2.jpg" %>
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

      <div class="flat-description">
        <div class="flat-info">
          <p><i class="fas fa-stamp"></i> <%= @trip.category %> </p>
          <p><i class="fas fa-rupee-sign"></i><span id="flat-price-per-night"><%= @trip.price %></span> Rs / pers</p>
          <p><i class="fas fa-users"></i> <%= @trip.total_participant %></p>
        </div>
        <div class="trip-details">
          <div class="details-title">What you'll do</div>
          <br>
          <div class="details"><%= @trip.details%><%= @trip.details%><%= @trip.details%><%= @trip.details%><%= @trip.details%><%= @trip.details%><%= @trip.details%><%= @trip.details%><%= @trip.details%></div>
        </div>
        <div class="trip-details">
          <div class="details-title">What to bring</div>
          <br>
          <div><i class="fas fa-edit"></i> <span> After you book the experience you'll receive the list of ingredients and tools that you'll need.</span></div>
        </div>
      </div>
    </div>

    <div class="form-wrapper">
      <%= simple_form_for [@trip, @booking], method: "post" do |f| %>
        <%= f.input :start_date, label: "Choose your dates:", as: :string, required: false, input_html: { id: "range_start", class: "d-none"} %>
        <%= f.input :end_date, label: false, as: :string, required: false, input_html: { id: "range_end", class: "d-none" } %>
        <div class="below-calendar">
          From Rs <%= @trip.price%> / pers <%= f.button :submit, "Book", class: "btn btn-principal btn-margin-top" %>
        </div>
      <% end %>
    </div>

  </div>
</div>

<div id="booking-form-div", data-bookings="<%= @bookings_dates.to_json %>">


<div>
 <%= link_to "Book", new_trip_booking_path(@trip), class: "btn btn-sm btn-outline-primary" %>
<div>
 <%= link_to "See all trips", trips_path, class: "btn btn-sm btn-outline-primary" %>

